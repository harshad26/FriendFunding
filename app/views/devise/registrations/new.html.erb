<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12">

      <div class="form-signin">
        <div style="margin: 0px 15px 50px">
          <%= image_tag(("logo_diylaw_blue.svg"), :class=>"img-responsive") %>
        </div>
        
        <h3 class="form-signin-heading text-center" style="margin-bottom:30px">Sign Up</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <label for="inputEmail" class="sr-only">Email address</label>
          <input autofocus="autofocus" type="email" value="" name="user[email]" id="user_email" class="form-control" placeholder="Email address">

          <div style="margin-top: 10px"></div>

          <label for="inputPassword" class="sr-only">Password</label>
          <input autocomplete="off" type="password" name="user[password]" id="user_password" class="form-control nomargin" placeholder="Password">

          <label for="inputPasswordConfirmation" class="sr-only">Password Confirmation</label>
          <input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control" placeholder="Password Confirmation">


          <div class="checkbox">
            <label>
              <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me"> Remember me
            </label>
          </div>
          
          <%= f.submit "Create Account", class: "btn btn-lg btn-primary btn-block" %>
          <div style="margin-top: 15px;"><%= render "devise/shared/links" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>


