<div class="container">
  <div class="row">
    <div class="page-header text-capitalize">
      <h2>My Profile</h2>
    </div>
  </div>

  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="form-horizontal">

          <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10 control-label-left">
              <p><%= @user.email %></p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-10 control-label-left">
              <p><%= @user.firstname %></p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-10 control-label-left">
             <p><%= @user.lastname %></p>
           </div>
         </div>

         <div class="form-group">
           <label class="col-sm-2 control-label">IC/Passport</label>
           <div class="col-sm-10 control-label-left">
             <p><%= @user.ic %></p>
           </div>
         </div>

        </div>
      </div>
      <div class="panel-footer">
         <%= link_to "Edit", edit_user_path(current_user.id), class: "btn btn-primary pull-right" %>
         <div class="clearfix"></div>
       </div>
    </div>
  </div>
</div>
