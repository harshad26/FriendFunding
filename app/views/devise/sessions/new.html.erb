<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12">

      <div class="form-signin">
        <div style="margin: 0px 15px 50px">
          <%= image_tag(("logo_diylaw_blue.svg"), :class=>"img-responsive") %>
        </div>

        <h3 class="form-signin-heading text-center" style="margin-bottom:30px">Log In</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control", name:"user[email]", id:"user_email", placeholder: "Email address", autofocus: "autofocus" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: "form-control", name: "user[password]", id:"user_password", placeholder:"Password" %>
        </div>
        
        <div class="checkbox">
          <label>
            <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me"> Remember me
          </label>
        </div>

        <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
        <div style="margin-top:15px"><%= render "devise/shared/links" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
