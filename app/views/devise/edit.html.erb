<div class="container">
  <div class="row">
    <div class="page-header text-capitalize">
      <h2>Account Settings</h2>
    </div>
  </div>

  <%= form_for @user, url: edit_user_registration_path, method: :put do |f| %>
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-horizontal">

            <div class="form-group">
              <label class="col-sm-2 control-label">First Name</label>
              <div class="col-sm-10">
                <%= f.text_field :firstname, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">Last Name</label>
              <div class="col-sm-10">
                <%= f.text_field :lastname, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">Identity Card / Passport Number</label>
              <div class="col-sm-10">
                <%= f.text_field :ic, class: "form-control" %>
              </div>
            </div>

          </div>
        </div>
        <div class="panel-footer">
          <%= f.submit "Save Changes", :class => "btn btn-primary pull-right", :style => "margin-left:10px" %>
          <%= link_to "Change Password or Email", edit_user_registration_path(current_user), class: 'btn btn-primary pull-right' %>
          <%= link_to "Cancel my account", cancel_user_registration_path(@user), data: { confirm: "Are you sure you want to delete your account? This action cannot be undo." }, method: :delete, class: 'btn btn-danger' %>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  <% end %>
</div>